@model IEnumerable<PatientManagementSystem.Models.OrderType>

@{
    ViewBag.Title = "Order Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary text-center">List of Order Types</h2>
<hr />
<div class="btn btn-default pull-right">
    @Html.ActionLink("Request Order", "Create", "PatientOrder")
</div>

<div style="font-family:Arial">

    <p>
        @using (Html.BeginForm("Index", "OrderType", FormMethod.Get))
        {
            <b>Search By:</b>@Html.RadioButton("SearchBy", "OrderCode", true) <text>Order Code</text>
            @Html.RadioButton("SearchBy", "SpecimenType") <text>Specimen Type</text><br />
            @Html.TextBox("Search") <input type="submit" value="Search" class="btn-success" />
        }
    </p>

    <table class="table table-striped table-bordered">
        <tr>
            <th>Order Code</th>
            <th>Order Name</th>
            <th>Specimen Type</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderCode</td>
                <td>@item.OrderName</td>
                <td>@item.SpecimenType</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderCode })
                </td>
            </tr>
        }
    </table>
</div>

